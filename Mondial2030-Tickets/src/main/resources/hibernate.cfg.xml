<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- PostgreSQL JDBC Configuration for Local Development -->
        <!-- For Docker deployment, these values are overridden by environment variables -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/mondial2030</property>
        <property name="connection.username">mondial_user</property>
        <property name="connection.password">mondial_pass</property>

        <!-- Connection Pool Configuration -->
        <property name="connection.pool_size">10</property>

        <!-- PostgreSQL Dialect -->
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Schema Management -->
        <property name="hbm2ddl.auto">update</property>
        
        <!-- SQL Logging -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>

        <!-- Performance Settings -->
        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.order_inserts">true</property>
        <property name="hibernate.order_updates">true</property>

        <!-- Entity Mappings -->
        <mapping class="com.mondial2030.model.User"/>
        <mapping class="com.mondial2030.model.Stadium"/>
        <mapping class="com.mondial2030.model.Match"/>
        <mapping class="com.mondial2030.model.Ticket"/>
        <mapping class="com.mondial2030.model.TicketTransfer"/>
    </session-factory>
</hibernate-configuration>
