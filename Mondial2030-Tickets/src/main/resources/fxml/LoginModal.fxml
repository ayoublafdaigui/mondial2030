<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mondial2030.controller.LoginModalController"
      alignment="CENTER" spacing="20" styleClass="modal-container">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="ðŸŸï¸" style="-fx-font-size: 48px;"/>
        <Label text="Connexion" styleClass="modal-title"/>
        <Label text="AccÃ©dez Ã  votre compte Mondial 2030" styleClass="modal-subtitle"/>
    </VBox>
    
    <!-- Login Form -->
    <VBox spacing="15" maxWidth="300">
        
        <VBox spacing="5">
            <Label text="Nom d'utilisateur"/>
            <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur" styleClass="form-field"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="Mot de passe"/>
            <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" styleClass="form-field"/>
        </VBox>
        
        <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
        
        <Button fx:id="loginButton" text="Se connecter" onAction="#handleLogin" 
                styleClass="primary-button" maxWidth="Infinity"/>
        
        <Separator/>
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Pas encore de compte?"/>
            <Hyperlink text="S'inscrire" onAction="#handleSwitchToSignup"/>
        </HBox>
        
    </VBox>
    
    <!-- Close button -->
    <Button text="Fermer" onAction="#handleClose" styleClass="secondary-button"/>
    
</VBox>
