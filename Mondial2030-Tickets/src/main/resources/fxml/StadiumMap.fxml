<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mondial2030.controller.StadiumMapController"
      spacing="15" alignment="CENTER"
      prefWidth="700" prefHeight="600"
      styleClass="stadium-map-container">
    
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>
    
    <Label text="Stadium Seating Map" styleClass="section-title"/>
    
    <HBox spacing="20" alignment="CENTER">
        <Label text="Section:" />
        <ComboBox fx:id="sectionComboBox" prefWidth="150" promptText="Select Section"/>
        <Label text="Match:" />
        <ComboBox fx:id="matchComboBox" prefWidth="200" promptText="Select Match"/>
    </HBox>
    
    <!-- Legend -->
    <HBox spacing="30" alignment="CENTER" styleClass="legend-box">
        <HBox spacing="5" alignment="CENTER">
            <Region prefWidth="20" prefHeight="20" styleClass="seat-available"/>
            <Label text="Available"/>
        </HBox>
        <HBox spacing="5" alignment="CENTER">
            <Region prefWidth="20" prefHeight="20" styleClass="seat-sold"/>
            <Label text="Sold"/>
        </HBox>
        <HBox spacing="5" alignment="CENTER">
            <Region prefWidth="20" prefHeight="20" styleClass="seat-selected"/>
            <Label text="Selected"/>
        </HBox>
        <HBox spacing="5" alignment="CENTER">
            <Region prefWidth="20" prefHeight="20" styleClass="seat-reserved"/>
            <Label text="Reserved"/>
        </HBox>
    </HBox>
    
    <!-- Stadium Grid will be populated programmatically -->
    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
        <GridPane fx:id="seatGrid" alignment="CENTER" hgap="3" vgap="3">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
    </ScrollPane>
    
    <!-- Selection Info -->
    <HBox spacing="15" alignment="CENTER" styleClass="selection-info">
        <Label text="Selected Seats:"/>
        <Label fx:id="selectedSeatsLabel" text="None"/>
        <Label text="Total Price:"/>
        <Label fx:id="totalPriceLabel" text="$0.00"/>
    </HBox>
    
    <HBox spacing="15" alignment="CENTER">
        <Button text="Book Selected Seats" onAction="#handleBookSeats" styleClass="book-button"/>
        <Button text="Clear Selection" onAction="#handleClearSelection" styleClass="clear-button"/>
    </HBox>
    
    <Label fx:id="statusLabel" styleClass="status-label"/>
</VBox>
