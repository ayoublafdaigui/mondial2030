# ===================================================================
# Mondial 2030 - Environment Configuration
# ===================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!
# ===================================================================

# ===================================================================
# Database Configuration
# ===================================================================

# PostgreSQL Database Credentials
DB_HOST=db                          # Use 'db' for Docker, 'localhost' for local
DB_PORT=5432
DB_NAME=mondial2030
DB_USER=mondial_user
DB_PASSWORD=mondial_pass

# Database SSL Mode (disable for local development)
DB_SSL_MODE=disable

# ===================================================================
# Application Configuration
# ===================================================================

# Application Environment (development, staging, production)
APP_ENV=development

# Docker Environment Flag (set to 'true' when running in Docker)
DOCKER_ENV=true

# Application Port (for future web server integration)
APP_PORT=8080

# ===================================================================
# Hibernate Configuration
# ===================================================================

# Schema Management Strategy
# - create: Create schema, destroying previous data
# - create-drop: Create schema, drop on SessionFactory close
# - update: Update schema (recommended for dev)
# - validate: Validate schema, make no changes
# - none: Disable schema management
HIBERNATE_HBM2DDL_AUTO=update

# SQL Logging (true for development, false for production)
HIBERNATE_SHOW_SQL=true
HIBERNATE_FORMAT_SQL=true

# ===================================================================
# Connection Pool Configuration
# ===================================================================

# HikariCP Settings
HIKARI_MINIMUM_IDLE=5
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_IDLE_TIMEOUT=30000
HIKARI_MAX_LIFETIME=1800000

# ===================================================================
# Security Configuration
# ===================================================================

# JWT Secret (for future authentication)
JWT_SECRET=your-secret-key-change-in-production

# Session Timeout (minutes)
SESSION_TIMEOUT=30

# ===================================================================
# Feature Flags
# ===================================================================

# Enable/Disable Features
FEATURE_BLOCKCHAIN=true
FEATURE_FRAUD_DETECTION=true
FEATURE_QR_CODES=true
FEATURE_EMAIL_NOTIFICATIONS=false

# ===================================================================
# Logging Configuration
# ===================================================================

# Log Level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log File Location
LOG_FILE_PATH=./logs/mondial2030.log

# ===================================================================
# External Services (Future Integration)
# ===================================================================

# Payment Gateway
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_API_KEY=your-api-key-here

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Blockchain Service
BLOCKCHAIN_NODE_URL=http://localhost:8545
BLOCKCHAIN_NETWORK_ID=11155111

# ===================================================================
# Display Configuration (for Docker GUI)
# ===================================================================

# X11 Display (Linux)
# For Windows with VcXsrv: host.docker.internal:0
# For Linux: :0 or :1
DISPLAY=host.docker.internal:0

# ===================================================================
# Development Tools
# ===================================================================

# pgAdmin Access (when using admin profile)
PGADMIN_DEFAULT_EMAIL=admin@mondial2030.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# ===================================================================
# Performance Tuning
# ===================================================================

# Java Memory Settings
JAVA_OPTS=-Xmx512m -Xms256m

# Hibernate Batch Settings
HIBERNATE_BATCH_SIZE=20
HIBERNATE_FETCH_SIZE=50

# ===================================================================
# Notes
# ===================================================================
# 
# Local Development:
#   - Set DB_HOST=localhost
#   - Set DOCKER_ENV=false
#   - Ensure PostgreSQL is running locally
#
# Docker Deployment:
#   - Set DB_HOST=db
#   - Set DOCKER_ENV=true
#   - Use docker-compose up
#
# Production:
#   - Change all passwords
#   - Set APP_ENV=production
#   - Set HIBERNATE_SHOW_SQL=false
#   - Enable SSL for database
#   - Use strong JWT_SECRET
#
# ===================================================================
